---
import Hero from '../components/Hero.astro';
import EventCard from '../components/EventCard.astro';
import { events } from '../data/events.js';
import MinistryCard from '../components/MinistryCard.astro';
import ContactForm from '../components/ContactForm.astro';
import { ministries } from '../data/ministries.js';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MIVIA</title>
  <link rel="stylesheet" href="/styles/global.css">
  <link rel="icon" href="/ministerios/minister.svg" type="image/svg+xml">
</head>

<body class="bg-gray-100 text-gray-900">
  <Header/>

  <main>
   <Hero/>
   <section class="py-12 md:py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Eventos Destacados</h2>
      <p class="text-base md:text-lg mb-12">No te pierdas nuestros próximos eventos.</p>
      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {events.map(event => (
          <EventCard event={event} key={event.id} />
        ))}
      </div>
    </div>
  </section>

    <!-- Sección de Ministerios -->
    <section class="bg-gray-200 py-12 md:py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Nuestros Ministerios</h2>
        <p class="text-base md:text-lg mb-12">Explora nuestras diferentes áreas de servicio.</p>
        <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
          {ministries.map(ministry => (
            <MinistryCard ministry={ministry} />
          ))}
        </div>
      </div>
    </section>

    <!-- Sección de Contacto -->
    <section class="py-12 md:py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Contacto</h2>
        <p class="text-base md:text-lg mb-12">¿Tienes preguntas o quieres saber más? ¡Contáctanos!</p>
        <ContactForm />
      </div>
    </section>
  </main>
<Footer/>
  
</body>
</html>
